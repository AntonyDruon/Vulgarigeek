{% extends 'base.html.twig' %}
{% block title %}Liste des Logiciels{% endblock %}
{% block body %}

<h3>Liste des <span>Logiciels</span>:</h3>
        <hr>
        <section>
            {% for logiciel in logiciels %}
            {# la variable article est declare au moment du for, c'est une varaible de reception : elle va receptionner un article par tour de boucle. 
            la variable articles correspond a l'indice 'articles' du tableau de paramètres de la méthode render() dans la méthode index() du fichier BlogController.php #}


                <article class="bloclogiciel">
                    <div class="imagepositionlogiciel">
                        <img src="{{ asset('image/article/' ~ logiciel.image) }}" alt="l'image du logiciel" class="img-fluidlogiciel">
                    </div>
                    <div class="placementelements">
                        <div class="placementtitrelogiciel">
                            <a href="{{ path('app_logiciel', {'id': logiciel.id})}}"><h4>{{logiciel.titre}}</h4></a> 
                        </div>
                        <div class="placementdescription">
                            {{ logiciel.description|raw|striptags|slice(0,200) }}
                        </div>
                        <div class="placementbtnlogiciel">
                            <a href="{{ path('app_logiciel', {'id': logiciel.id})}}" class="btnlogiciel">Lire la suite</a>
                        </div>

                    </div>
                    </div>

                </article>
                <hr>
            {% endfor %}
        </section>


{% endblock %}
