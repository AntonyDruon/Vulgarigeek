{% extends "base.html.twig" %}

{% block title %}Gestion des articles{% endblock %}

{% block body %}

<pre>
    {# {{ dump(articles) }} #}
</pre>

<a href="{{ path('app_admin_newarticle') }}" class=" btn btn-success mb-3"> Ajouter un article</a>
<table class="table table-bordered text-center">


    <thead>
        <tr>
            {% for colonne in colonnes %}
            <th>{{ colonne }}</th>

            {% endfor %}
            
            <th>Editer</th>
            <th>Supprimer</th>
        </tr>
    </thead>
    {#  le titre des colonnes du tableau sera le nom des champs de l'entity Article #}
    <tbody>
    {% for article in articles %}
    <tr>
    <td>{{ article.id }}</td>
    <td>{{ article.titre }}</td>
    <td>{{ article.contenu }}</td>
    <td><img src=" {{ asset('image/article/' ~ article.image) }}" alt="" style="width: 150px;"></td>
    <td>{{ article.datedecreation|date("d/m/Y à H:i:s") }}</td> 
    <td>{{ article.dateedition|date("d/m/Y à H:i:s") }}</td>
    <td><a href="{{path('app_admin_editarticle', {id: article.id}) }}"class="btn btn-warning "><i class="fas fa-edit"></i></a></td>
    <td><a href="{{path('delete_article', {id: article.id})}}"class="btn btn-danger "><i class="fas fa-trash-alt"></i></a></td>
    
    
    </tr>
        
    {% endfor %}
    
    </tbody>


</table>


{% endblock %}