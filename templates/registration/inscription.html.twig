{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<main>
    <div class="placementinscription">
        <div class="blocinscription">
            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}

            
            <div class="placementform">
            <h2>Inscription</h2>
                {{ form_start(registrationForm) }}
                    {{ form_row(registrationForm.pseudo)}}
                    {{ form_row(registrationForm.email) }}
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'mot de passe'
                    }) }}
                    {# {{ form_row(registrationForm.agreeTerms) }} #}

                    <button type="submit" class="bouton btn mt-2" style="text-align: end">S'inscrire</button>
                {{ form_end(registrationForm) }}
            </div>
            <p>Vous avez déjà un compte?&nbsp;<a style="color:#1D3557;text-decoration: underline;"  href="{{path('app_login')}}">Connexion</a></p>
        </div>
    </div>
</main>
{% endblock %}
