{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<main>
    <div class="placementconnexion">
        <div class="blocconnexion">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Tu es connect√© en tant que {{ app.user.pseudo }}, <a style="color:#1D3557;text-decoration: underline;" href="{{ path('app_logout') }}">Deconnexion</a>
                    </div>
                {% endif %}
                <div class="placementformconnexion">
                    <h2>Connexion</h2>
                    <label class="placementlabel" for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                    <label class="placementlabel" for="inputPassword">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                    <input type="hidden" name="_csrf_token"
                        value="{{ csrf_token('authenticate') }}"
                    >

                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                    #}

                    <button type="submit" class="bouton btn mt-2">Connexion</button>
                
            </form>
            </div>
            <p>Vous n'avez pas de compte?&nbsp;<a style="color:#1D3557;text-decoration: underline;"  href="{{path('app_register')}}">S'inscrire</a></p>
        </div>
    </div>
</main>
{% endblock %}
